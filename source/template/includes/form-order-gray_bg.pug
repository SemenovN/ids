include mixin
div.form__wrap--gray
	form(action="#" method="post" class="form--gray")
		div.form__inner
			div.form__side--right
				select(class="turnintodropdown")
					option Выбирите услугу
					option Разаработка сайта
					option Разаработка мобильного приложения
					option Продвижение в социальных медиа(SMM)
					option Системная интеграция
					option Техническая поддержка
				input(class="form__input" type="text" name="usrname" placeholder="Ваше имя")
				input(class="form__input" type="tel" name="usrtel" placeholder="Телефон")
				input(class="form__input" type="email" name="email" placeholder="E-mail")
				p.budget Бюджет
				div.budget__list
					label(class="active")
						input(type="radio" value="менее 200 тыс.")
						p менее 200 тыс.
					label(class="active")
						input(type="radio" value="от 200 тыс. до 700 тыс.")
						p от 200 тыс. до 700 тыс.
					label(class="budget__item")
						input(type="radio" value="от 700 тыс. до 2 млн.")
						p от 700 тыс. до 2 млн.
					label(class="budget__item")
						input(type="radio" value="от 2 млн. до 5 млн.")
						p от 2 млн. до 5 млн.
			div.form__side--left
				textarea(class="form__textarea" placeholder="Краткая постоновка задачи")
				div.file-upload
					label
						input(type="file")
						+icon('clip')
						span Прикрепить файл
		a(class="button" href="#") Оставить заявку